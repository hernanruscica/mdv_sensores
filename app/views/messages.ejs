<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= message %> - MDV Sensores</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />    
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head> 
<body style="background-color: #272404;">

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<%  if (typeof results !== 'undefined' && results === 'addUserOk'){ %>
      <script>
          Swal.fire({
                  title: 'Registro exitoso !',
                  text: '<%= message %>',
                  icon: 'success',
                  confirmButtonText: 'Entendido'})
                  .then((result) => {
                  if (result.isConfirmed){
                    location.href='/users/all';
                  }
                })  
      </script>
    <%
    }    
%>

<%  if (typeof results !== 'undefined' && results === 'addUserFails'){ %>
    <script>
        Swal.fire({
                title: 'Registro Fallido !',
                text: '<%= message %>',
                icon: 'error',
                confirmButtonText: 'Entendido'})
                .then((result) => {
                  if (result.isConfirmed){
                    location.href='/users/all';
                  }
                })  
    </script>
    <%
    }
%>

<%  if (typeof results !== 'undefined' && results === 'editUserOk'){ %>
    <script>
        Swal.fire({
                title: 'Edicion exitosa !',
                text: '<%= message %>',
                icon: 'success',
                confirmButtonText: 'Entendido'})
                .then((result) => {
                if (result.isConfirmed){
                  location.href='/users/view/<%= userDni %>';
                }
              })
    </script>
    <% 
    }  
%>

<%  if (typeof results !== 'undefined' && results === 'editUserFails'){ %>
    <script>
        Swal.fire({
                title: 'Edicion erronea !',
                text: '<%= message %>',
                icon: 'error',
                confirmButtonText: 'Entendido'})
                .then((result) => {
                if (result.isConfirmed){
                  location.href='/users/view/<%= userDni %>';
                }
              })
    </script>
    <% 
    }     
%>

<%  if (typeof results !== 'undefined' && results === 'correoenviado'){ %>
  <script>
      Swal.fire({
              title: 'Correo enviado !',
              text: '<%= message %>',
              icon: 'succes',
              confirmButtonText: 'Entendido'})
              .then((result) => {
                if (result.isConfirmed){
                  location.href='/users/all';
                }
              })              
  </script>
  <%
   }  
%>

</body>
</html>

